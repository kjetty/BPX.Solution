@model BPX.Domain.ViewModels.BPXLoginViewModel

@{
	ViewData["Title"] = "Login";
}

<p></p>

<br />
<br />

<div class="row">
	<div class="col-md-2">
	</div>
	<div class="col-md-8">
		<form asp-area="Identity" asp-controller="Account" asp-action="Login">
			@*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
			<input type="hidden" name="ReturnUrl" value="@ViewBag.returnURL" />

			<div class="card">
				<div class="card-header">
					<h4 class="panel-title">Login</h4>
				</div>

				<div class="card-body">
					<div class="row form-group">
						<div class="col-md-2">
							<label asp-for="LoginId" class="control-label"></label>
						</div>
						<div class="col-md-5 input-group">
							<div class="input-group-prepend">
								<span class="input-group-text"><i class="bi-person-circle"></i></span>
							</div>
							<input asp-for="LoginId" class="form-control" />
						</div>
						<div class="col-md-5">
							<i class="bi-asterisk" style="color:red; margin-left:-22px; padding-right:5px; font-size: 0.5rem;" aria-hidden="true"></i>
							<span asp-validation-for="LoginId" class="text-danger"></span>
						</div>
					</div>
					<div class="row form-group">
						<div class="col-md-2">
							<label asp-for="Password" class="control-label"></label>
						</div>
						<div class="col-md-5 input-group">
							<div class="input-group-prepend">
								<span class="input-group-text"><i class="bi-key"></i></span>
							</div>
							<input asp-for="Password" class="form-control" />
						</div>
						<div class="col-md-5">
							<i class="bi-asterisk" style="color:red; margin-left:-22px; padding-right:5px; font-size: 0.5rem;" aria-hidden="true"></i>
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>
					</div>
					<div class="row form-group">
						<div class="col-md-2">
				
						</div>
						<div class="col-md-5 input-group">
							<input type="submit" value="   Login   " class="btn btn-primary" />
						</div>
						<div class="col-md-5">
						
						</div>
					</div>
					<br />
					<div class="row form-group">
						<div class="col-md-2">
							&nbsp;
						</div>
						<div class="col-md-5 input-group">
							<a asp-area="Identity" asp-controller="Account" asp-action="ForgotPassword">Forgot Password?</a>
						</div>
						<div class="col-md-5">
							&nbsp;
						</div>
					</div>
				</div>
				<div class="card-footer">
					New to BPX? &nbsp; <a asp-area="Identity" asp-controller="Account" asp-action="Register">Register Here</a>
				</div>
			</div>
		</form>
	</div>
	<div class="col-md-2">
	</div>
</div>

<br />
<br />

@section ScriptsAtBottom {
	<partial name="_PartialValidationScripts" />
}
