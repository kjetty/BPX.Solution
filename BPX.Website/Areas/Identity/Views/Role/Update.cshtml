@model BPX.Domain.ViewModels.RoleMiniViewModel

@using BPX.Website.CustomCode.Authorize;

@{
    ViewData["Title"] = "Edit Role";
}

<div class="row">
    <div class="col-md-12">
        <h5>@ViewBag.Title</h5>
    </div>
</div>

<p></p>
<hr />

<div class="row">
    <div class="col-md-12">
        <form asp-action="Update" method="post">
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <input type="hidden" asp-for="RoleId" />

            <div class="row form-group">
                <div class="col-md-2">
                    <label asp-for="RoleName" class="control-label"></label>
                </div>
                <div class="col-md-4 input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="bi-at"></i></span>
                    </div>
                    <input asp-for="RoleName" class="form-control" />
                </div>
                <div class="col-md-6">
                    <i class="bi-asterisk" style="color:red; margin-left:-22px; padding-right:5px; font-size: 0.5rem;" aria-hidden="true"></i>
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-2">
                    <label asp-for="RoleDescription" class="control-label"></label>
                </div>
                <div class="col-md-4 input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="bi-card-text"></i></span>
                    </div>
                    <input asp-for="RoleDescription" class="form-control" />
                </div>
                <div class="col-md-6">
                    <i class="bi-asterisk" style="color:red; margin-left:-22px; padding-right:5px; font-size: 0.5rem;" aria-hidden="true"></i>
                    <span asp-validation-for="RoleDescription" class="text-danger"></span>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-2">
                    &nbsp;
                </div>
                <div class="col-md-4 input-group">
                    <input type="submit" value="   Save   " class="btn btn-primary" />
                    <span style="margin: 5px 0 0 10px">
                        @if (((List<int>)ViewBag.currUserPermitIds).Contains(Permits.Identity.Role.List))
                        {
                            @Html.Raw("&nbsp;&nbsp;|&nbsp;&nbsp;") <a asp-action="List">Back to List</a>
                        }
                    </span>
                </div>
                <div class="col-md-6">
                    &nbsp;
                </div>
            </div>
        </form>
    </div>
</div>

@section ScriptsAtBottom {
<partial name="_PartialValidationScripts" />
}

