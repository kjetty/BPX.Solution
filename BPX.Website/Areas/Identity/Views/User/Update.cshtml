@model BPX.Domain.ViewModels.UserMiniViewModel

@using BPX.Website.Filters.Authorize;

@{
    ViewData["Title"] = "Edit User";
}

<div class="row">
    <div class="col-sm-12">
        <h5>@ViewBag.Title</h5>
    </div>
</div>

<p></p>
<hr />

<div class="row">
    <div class="col-sm-12">
        <form asp-action="Update" method="post">
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <input type="hidden" asp-for="UserId" />
            <div class="row form-group">
                <div class="col-sm-2">
                    <label asp-for="FirstName" class="control-label"></label>
                </div>
                <div class="col-sm-4 input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="bi-person"></i></span>
                    </div>
                    <input asp-for="FirstName" class="form-control" />
                </div>
                <div class="col-sm-6">
                    <i class="bi-asterisk" style="color:red; margin-left:-22px; padding-right:5px; font-size: 0.5rem;" aria-hidden="true"></i>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-sm-2">
                    <label asp-for="LastName" class="control-label"></label>
                </div>
                <div class="col-sm-4 input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="bi-person-fill"></i></span>
                    </div>
                    <input asp-for="LastName" class="form-control" />
                </div>
                <div class="col-sm-6">
                    <i class="bi-asterisk" style="color:red; margin-left:-22px; padding-right:5px; font-size: 0.5rem;" aria-hidden="true"></i>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-sm-2">
                    <label asp-for="Email" class="control-label"></label>
                </div>
                <div class="col-sm-4 input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="bi-envelope"></i></span>
                    </div>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="col-sm-6">
                    <i class="bi-asterisk" style="color:red; margin-left:-22px; padding-right:5px; font-size: 0.5rem;" aria-hidden="true"></i>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-sm-2">
                    <label asp-for="Mobile" class="control-label"></label>
                </div>
                <div class="col-sm-4 input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="bi-telephone"></i></span>
                    </div>
                    <input asp-for="Mobile" class="form-control" />
                </div>
                <div class="col-sm-6">
                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-sm-2">
                    &nbsp;
                </div>
                <div class="col-sm-4 input-group">
                    <input type="submit" value="   Save   " class="btn btn-primary" />
                    <span style="margin: 5px 0 0 10px">
                        @if (((List<int>)ViewBag.currUserPermitIds).Contains(Permits.Identity.User.List))
                        {
                            @Html.Raw("&nbsp;&nbsp;|&nbsp;&nbsp;") <a asp-action="List">Back to List</a>
                        }
                    </span>
                </div>
                <div class="col-sm-6">
                    &nbsp;
                </div>
            </div>
        </form>
    </div>
</div>

@section ScriptsAtBottom {
<partial name="_PartialValidationScripts" />
}

