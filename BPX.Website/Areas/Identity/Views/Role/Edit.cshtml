@model BPX.Domain.ViewModels.RoleMiniViewModel

@using BPX.Domain.CustomModels;
@using BPX.Website.CustomCode.Authorize;

@{
	ViewData["Title"] = "Edit Role";

	// fyi :: passed in objects
	// none
}

<div class="row">
	<div class="col-md-12">
		<h5>@ViewBag.Title</h5>
	</div>
</div>

<p></p>
<hr />

<div class="row">
	<div class="col-md-12">
		<form asp-action="Edit">
			@*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
			<input type="hidden" asp-for="RoleId" />
			<div class="row form-group">
				<div class="col-md-2">
					<label asp-for="RoleName" class="control-label"></label>
				</div>
				<div class="col-md-4 input-group">
					<div class="input-group-prepend">
						<span class="input-group-text"><i class="fa fa-role fa-fw"></i></span>
					</div>
					<input asp-for="RoleName" class="form-control" />
				</div>
				<div class="col-md-6">
					<i class="fa fa-asterisk fa-xs" style="color:red; margin-left:-22px; padding-right:5px; font-size: 0.5rem;" aria-hidden="true"></i>
					<span asp-validation-for="RoleName" class="text-danger"></span>
				</div>
			</div>
			<div class="row form-group">
				<div class="col-md-2">
					<label asp-for="RoleDescription" class="control-label"></label>
				</div>
				<div class="col-md-4 input-group">
					<div class="input-group-prepend">
						<span class="input-group-text"><i class="fa fa-role fa-fw"></i></span>
					</div>
					<input asp-for="RoleDescription" class="form-control" />
				</div>
				<div class="col-md-6">
					<i class="fa fa-asterisk fa-xs" style="color:red; margin-left:-22px; padding-right:5px; font-size: 0.5rem;" aria-hidden="true"></i>
					<span asp-validation-for="RoleDescription" class="text-danger"></span>
				</div>
			</div>
			<div class="row form-group">
				<div class="col-md-2">
					&nbsp;
				</div>
				<div class="col-md-4 input-group">
					<input type="submit" value="   Save   " class="btn btn-primary" />
				</div>
				<div class="col-md-6">
					&nbsp;
				</div>
			</div>
		</form>
	</div>
</div>

<div>
	@if (((List<int>)ViewBag.currUserPermitIds).Contains(Permits.Identity.Role.List))
	{
		<a asp-action="Index">Back to List</a>
	}
</div>

@section ScriptsAtBottom {
	<partial name="_ValidationScriptsPartial" />
}

