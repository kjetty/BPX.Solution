@model BPX.Domain.ViewModels.ChangePasswordViewModel

@using BPX.Domain.DbModels;

@{
    ViewData["Title"] = "ChangePassword";
}

<p></p>

<div class="row">
    <div class="col-sm-12">
        <form asp-area="Identity" asp-controller="Account" asp-action="ChangePassword" method="post">
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <input type="hidden" name="UserId" value="@((User)ViewBag.currUser).userId" />

            <div class="card">
                <div class="card-header">
                    <h4 class="panel-title">Change Password</h4>
                </div>

                <div class="card-body">
                    <div class="row form-group">
                        <div class="col-sm-3">
                            <label asp-for="OldPassword" class="control-label"></label>
                        </div>
                        <div class="col-sm-5 input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-user fa-fw"></i></span>
                            </div>
                            <input asp-for="OldPassword" class="form-control" />
                        </div>
                        <div class="col-sm-4">
                            <i class="bi-asterisk" style="color:red; margin-left:-22px; padding-right:5px; font-size: 0.5rem;" aria-hidden="true"></i>
                            <span asp-validation-for="OldPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-sm-3">
                            <label asp-for="NewPassword" class="control-label"></label>
                        </div>
                        <div class="col-sm-5 input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-user fa-fw"></i></span>
                            </div>
                            <input asp-for="NewPassword" class="form-control" />
                        </div>
                        <div class="col-sm-4">
                            <i class="bi-asterisk" style="color:red; margin-left:-22px; padding-right:5px; font-size: 0.5rem;" aria-hidden="true"></i>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-sm-3">
                            <label asp-for="ConfirmPassword" class="control-label"></label>
                        </div>
                        <div class="col-sm-5 input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-key fa-fw"></i></span>
                            </div>
                            <input asp-for="ConfirmPassword" class="form-control" />
                        </div>
                        <div class="col-sm-4">
                            <i class="bi-asterisk" style="color:red; margin-left:-22px; padding-right:5px; font-size: 0.5rem;" aria-hidden="true"></i>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-sm-3">
                            &nbsp;
                        </div>
                        <div class="col-sm-5 input-group">
                            <input type="submit" value="   Login   " class="btn btn-primary" />
                        </div>
                        <div class="col-sm-4">
                            &nbsp;
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section ScriptsAtBottom {
<partial name="_PartialValidationScripts" />
}